.body
  .message
    .message-upper-info
      .message-upper-info__talker
        = message.user.name
      .message-upper-info__date
        = message.created_at.strftime("%Y/%m/%d %H:%M")
    .message-lower
      - if message.content.present?
        %p.message-lower__text
          = message.content 
      = image_tag message.image.url, class: 'message-lower__image' if message.image.present?